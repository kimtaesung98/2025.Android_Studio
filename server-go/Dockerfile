FROM golang:1.24-alpine AS builder

# SQLite ë¹Œë“œë¥¼ ìœ„í•œ í•„ìˆ˜ ì„¤ì •
ENV CGO_ENABLED=1
RUN apk add --no-cache gcc musl-dev

WORKDIR /app

# go.sumì´ ìˆìœ¼ë©´ ê°™ì´ ë³µì‚¬
COPY go.mod go.sum* ./
